<!-- insert articles here    -->
{{#each articles}} {{#if this.isSaved}}
<div class="container-fluid article-container">
  <div class="card" style="width: 95%;">
    <div class="card-body">
      <h5 class="card-title">
        <a href="{{link}}" target="_blank">{{title}}</a>
      </h5>
      <p class="card-text">{{summary}}</p>
      <a href="#" class="btn btn-primary deleteArticle" data-id="{{_id}}">Delete</a>
      <!--<a href="#" class="btn btn-primary addNote" data-id="{{_id}}">Add Notes</a> -->
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary addNote" data-toggle="modal" data-target="#exampleModal">
        Add Notes
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">{{title}}</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form  >
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Enter notes here...</label>
                <textarea class="form-control" id="{{this._id}}" rows="4"></textarea>
                <button type="button" class="btn btn-primary saveNote">Save Note</button>
              </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr> {{/if}} {{/each}}


